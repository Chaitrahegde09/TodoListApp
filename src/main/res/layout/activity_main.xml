<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F3EEFF">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My To-Do List"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#4A4458"
        android:layout_marginBottom="20dp"/>

    <!-- Task Input -->
    <EditText
        android:id="@+id/etTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your task"
        android:padding="14dp"
        android:textSize="16sp"
        android:backgroundTint="#C7B7F7"
        android:textColor="#4A4458"
        android:textColorHint="#9C96B8"/>

    <!-- Add Button -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Task"
        android:layout_marginTop="12dp"
        android:backgroundTint="#B8A9F6"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <!-- Clear Button -->
    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear All"
        android:layout_marginTop="8dp"
        android:backgroundTint="#D7CCFF"
        android:textColor="#4A4458"
        android:textSize="16sp"/>



    <!-- Task List -->
    <ListView
        android:id="@+id/listTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"/>


</LinearLayout>
